<div class="genre-box">
  <div class="fish-box">
    <%= form_with(model: @fish, local: true) do |f| %>
      <%= f.collection_select(:fish_genre_id, FishGenre.all, :id, :name, {}, {class: "genre-select"}) %>
      <%= link_to "詳細", fish_path(@fish.id), id: "custom-btn" %>
    <% end %>
  </div>
  <div class="tool-box">
    <%= form_with(model: @fish, local: true) do |f| %>
      <%= f.collection_select(:tool_genre_id, ToolGenre.all, :id, :name, {}, {class: "genre-select"}) %>
    <% end %>
  </div>
  <div class="area-box">
    <%= form_with(model: @fish, local: true) do |f| %>
      <%= f.collection_select(:area_genre_id, AreaGenre.all, :id, :name, {}, {class: "genre-select"}) %>
    <% end %>
  </div>
</div>

<div class="contents row">
  <% @catches.each do |catch| %>
    <ul class='catch-lists'>
      <li class='list'>
        <%= link_to catch_path(catch.id) do %>
          <div class="content_post">
            <%= image_tag catch.image, class: 'catch-image' %>
            <p><%= catch.title %></p> 
            <span class="name">投稿者<%= catch.user.nickname %></span>
            <h5>釣果日時<%= catch.fishing %></h5>
            <h5>投稿日時<%= catch.created_at.strftime('%Y/%m/%d %H:%M') %></h5>
          </div>
        <% end %>
      </li>
    </ul>
  <% end %>
</div>