<%= form_with(url: search_catches_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<div class="contents row">
  <% @catches.each do |catch| %>
    <ul class='catch-lists'>
      <li class='list'>
        <%= link_to catch_path(catch.id) do %>
          <div class="content_post">
            <%= image_tag catch.image, class: 'catch-image' %>
            <p><%= catch.title %></p> 
            <span class="name">投稿者<%= catch.user.nickname %></span>
            <h5>釣果日時<%= catch.fishing %></h5>
          </div>
        <% end %>
      </li>
    </ul>
  <% end %>
</div>